{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/auth/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/database/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/send-verification-email",
      "dest": "/backend/server.js"
    }
  ]
}
